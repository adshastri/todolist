    <link href="/stylesheets/jumbotron-narrow.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/angularApp.js"></script>
    <script type="text/javascript">
		function displayWrapper(ele){
			document.getElementById("noteToShow").innerHTML = ele.childNodes[1].innerHTML;
		}
	</script>
