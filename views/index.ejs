  <body ng-app="todolist" ng-controller="MainCtrl">

    <div class="container" id="containerdiv" ng-init="notes()">

      <div class="jumbotron" >
        <h1>To-do List</h1>
        <p class="lead">Organize your tasks and write down your chores so you don't forget.</p>
        <p><a class="btn btn-lg btn-success" ng-click="displayNoteInputBox()" role="button">Add new note</a></p>
      </div>

      <div class="row marketing">
        <div class="col-lg-6">
        	<div ng-repeat="note in notesleft"  ng-click="displayLargeNoteBox(this)">
	          <h4 class="note-title">{{note.title}}</h4>
            <p class="note-content">{{note.content}}</p>
				<br>
			</div>
        </div>

        <div class="col-lg-6">
          <div ng-repeat="note in notesright" ng-click="displayLargeNoteBox(this)">
	          <h4 class="note-title">{{note.title}}</h4>
            <p class="note-content">{{note.content}}</p>
			<br>
			</div>
        </div>
      </div>

      <footer class="footer">
        <p>&copy; 2016 Aditya Shastri, Inc.</p>
      </footer>

      <div id="createNoteBox" class="jumbotron">
      	<a class="cancel-button" id="cancelButtonCreatNote" ng-click="cancelCreateNote()">Cancel</a>
      	<form id="createNoteForm">
      		<input type="text" name="title" id="title-input" placeholder="Title"></input>
      		<br>
      		<textarea id="main-input" form="createNoteForm"></textarea>
      		<button class="btn btn-lg btn-success" ng-click="addNote()">Create Note</a>
      	</form>
      	<br>
      </div>
      <div id="showNoteBox" class="jumbotron">
         <a id="cancel-button" class="cancel-button" ng-click="cancelShowNote()">Cancel</a>
         <a id="delete-button" class="btn btn-info delete-button" ng-click="deleteNote(currentNote)">Remove</a>
         <h4 id="note-title" style="font-size: 36px;"></h4>
         <p id="note-content" style="font-size: 20px;text-align: left;padding-left:10px;"></p>
      </div>

    </div> <!-- /container -->
	

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
